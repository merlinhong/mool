{
  "compilerOptions": {
    "target": "esnext", // 编译目标
    "module": "CommonJS", // 模块系统
    "moduleResolution": "node", // 模块解析策略
    "declaration": true, // 生成类型声明文件
    "declarationDir": "./dist/", // 类型声明文件输出目录
    "outDir": "dist", // 输出目录
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "sourceMap": false,
    "noEmitOnError": false,
    "esModuleInterop": true, // 允许默认导入非 ES 模块
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules/**", // 排除 node_modules 目录
    "**/dist/**" // 排除输出目录
  ]
}